{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2023"],
    
    "paths": {
      "@/*": ["./src/*"]
    },

    "isolatedModules": true,

    "module": "Node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  }
}